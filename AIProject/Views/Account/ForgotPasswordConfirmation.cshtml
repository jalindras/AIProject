@model AIProject.Models.AccountViewModels.ForgotPasswordConfirmationViewModel
@{
    ViewData["Title"] = "Reset link generated";
}

<h1>@ViewData["Title"]</h1>
<p>If the email you entered is registered, we generated a password reset link.</p>
@if (!string.IsNullOrEmpty(Model.ResetLink))
{
    <div class="alert alert-info">
        <p class="mb-1">Use the following link to reset the password:</p>
        <a class="fw-bold" href="@Model.ResetLink">@Model.ResetLink</a>
    </div>
}
else
{
    <p>For security reasons we don't indicate whether the email exists in our system.</p>
}
<p><a asp-action="Login">Return to login</a></p>
