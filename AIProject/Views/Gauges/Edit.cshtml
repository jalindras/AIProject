@model AIProject.Models.Gauge

@{
    ViewData["Title"] = "Edit Gauge";
}

<h1 class="mb-3">Edit Gauge</h1>

<div class="mb-3">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link">&larr; Back to details</a>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.Partial("_GaugeForm", Model)
    <div class="mt-4 d-flex justify-content-end gap-2">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
