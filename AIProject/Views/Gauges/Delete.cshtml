@model AIProject.Models.Gauge

@{
    ViewData["Title"] = "Delete Gauge";
}

<h1>Delete Gauge</h1>
<hr />

<h3>Are you sure you want to delete this gauge?</h3>
<div class="mb-3">
    <strong>@Model.SerialNumber</strong> for @Model.Customer?.FirstName @Model.Customer?.LastName
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
